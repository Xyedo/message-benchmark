<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ERROR" monitorInterval="30">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <!-- Set all loggers to ERROR by default -->
        <Root level="ERROR">
            <AppenderRef ref="Console"/>
        </Root>
        
        <!-- Suppress verbose driver logs -->
        <Logger name="io.pravega" level="ERROR"/>
        <Logger name="io.nats" level="ERROR"/>
        <Logger name="org.apache.pulsar" level="ERROR"/>
        <Logger name="io.grpc" level="ERROR"/>
        <Logger name="io.netty" level="ERROR"/>
        <Logger name="org.apache.bookkeeper" level="ERROR"/>
        <Logger name="org.apache.zookeeper" level="ERROR"/>
    </Loggers>
</Configuration>
